.prefer-posi {
	position: absolute;
	left: 0;
	right: 0;
	width: 100%;
	z-index: 99;
	background: #fff;
}
.delicacy-view image {
	
	width: 35rpx;
	height: 35rpx;
}
.delicacy-view {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	font-size: 32rpx;
	padding: 10rpx 5rpx;
	color: #666;
}
.delicacy-list {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.delicacy-right {
	-webkit-box-pack: end;
	-webkit-justify-content: flex-end;
	        justify-content: flex-end;
	-webkit-box-flex: 5;
	-webkit-flex-grow: 5;
	        flex-grow: 5;
}
.delicacy-grow {
	-webkit-box-flex: 1;
	-webkit-flex-grow: 1;
	        flex-grow: 1;
}
.delicacy-grow:nth-child(1) {
	width: 180rpx;
}
/* 综合排序 展开栏 */
.sortlist text{
	display: block;
	height: 70rpx;
	line-height: 70rpx;
	font-size: 30rpx;
	border-top: 1rpx solid #ededed;
}
/* ranking选中切换样式 */
.active {
	color: #ffd348 !important;
}
/* 筛选部分----样式 */
.sortlist-view {
	height: 700rpx;
	position: relative;
}
.sortlist-title {
	padding: 0 15rpx;
	font-size: 30rpx;
	height: 60rpx;
	line-height: 60rpx;
	overflow-y: scroll;
}
/* 选择按钮样式 */
.choice {
	font-size: 28rpx;
	background: #F8F8F8;
	height: 55rpx;
	line-height: 55rpx;
	color: #666666;
	width: 200rpx;
	margin: 7.5px;
	text-align: center;
	display: block;
	border-radius: 5px;
}
.sortlist-flex {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	margin-bottom: 30rpx;
}
/* 底部按钮 */
.sortlist-bottom {
	background-color: #fff;
	height: 80rpx;
	border-top: 1rpx solid #e4e4e4;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-justify-content: space-around;
	        justify-content: space-around;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	position: absolute;
	bottom: 0;
	left: 0;
	right: 0;
}
.sortlist-bottom text {
	width: 50%;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
}
.sortlist-bottom text:nth-child(2) {
	background-color: #ffd348;
}
/* 阴影部分 */
.shdow {
	position: fixed;
	top: 0;
	right: 0;
	left: 0;
	bottom: 0;
	background: rgba(0,0,0,.5);
}



